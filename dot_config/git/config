	navigate = true
	theme = Catppuccin-mocha
[diff]
	colorMoved = default
[init]
	templateDir = ~/.config/git/template
[interactive]
	diffFilter = delta --color-only
[merge]
	conflictstyle = diff3
[pull]
	rebase = true
[push]
	autoSetupRemote = true
[rebase]
	autoStash = true
[safe]
	directory = *
