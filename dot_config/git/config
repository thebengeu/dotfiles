[alias]
	all = "!find . -maxdepth 2 -name .git -type d | parallel --jobs 5 git -C {}/.. $@ #"
	default-branch = !git rev-parse --abbrev-ref origin/HEAD | cut -c 8-
	delete-remote-branches-except = "!git branch --remotes | grep origin/ | grep -E -v \"(HEAD|develop|main|master|$(echo $@ | tr ' ' '|'))$\" | cut -d / -f 2- | xargs git push origin --delete #"
	grep-all = !git rev-list --all | xargs git grep
	lg = log --pretty='%Cgreen%ah%Creset %s'
	lm = log --pretty='- **%s**%n  %b'
	pf = push --force-if-includes --force-with-lease
	pu = !git pull upstream $(git branch --show-current)
	rau = !~/.config/git/template/hooks/add-upstream-auto-detected-url.sh
	s = status --short
	sw = "!git switch ${1:-$(git default-branch)} #"
	wip = !git add --all && git commit -m 'WIP' -m 'gitlint-ignore: all' && git push
[branch]
	sort = -committerdate
[column]
	ui = auto
[commit]
	verbose = true
[core]
	fsmonitor = true
	pager = delta
	untrackedCache = true
[delta]
	navigate = true
	minus-emph-style = normal "#3E4B6B"
	minus-style = normal "#443244"
	plus-emph-style = syntax "#3E4B6B"
	plus-style = syntax "#364143"
[diff]
	algorithm = histogram
	colorMoved = dimmed-zebra
	external = difft --color=always
	mnemonicPrefix = true
	renames = true
[fetch]
	all = true
	prune = true
	pruneTags = true
[help]
	autocorrect = prompt
[includeIf "gitdir:~/AppData/Roaming/wezterm/plugins"]
	path = ~/.config/wezterm/.gitconfig
[includeIf "gitdir:~/Library/Application Support/wezterm/plugins"]
	path = ~/.config/wezterm/.gitconfig
[init]
	defaultBranch = master
	templateDir = ~/.config/git/template
[interactive]
	diffFilter = delta --color-only
[merge]
	conflictstyle = zdiff3
[pull]
	rebase = true
[push]
	autoSetupRemote = true
	followTags = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[rerere]
	autoupdate = true
	enabled = true
[safe]
	directory = *
[tag]
	sort = version:refname
[url "git@github.com:"]
	insteadOf = https://github.com/
[user]
	email = beng@bengeu.com
	name = Beng Eu
