[alias]
	lg = log --pretty='format:%Cgreen%ah%Creset %s'
	rau = !~/.config/git/template/hooks/add-upstream-auto-detected-url.sh
	s = status --short --untracked-files
  wip = !git add --all && git commit -m 'WIP' && git push
