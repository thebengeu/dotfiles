hooks:
  apply:
    pre:
      args:
        - -c
        - >-
          cd $CHEZMOI_SOURCE_DIR;
          cue export --force --inject-vars --outfile .chezmoidata.yaml .chezmoidata.cue;
          cd .chezmoiexternals;
          cue export --force --inject-vars --outfile bat.yaml .{common,bat}.cue;
          cue export --force --inject-vars --outfile externals.yaml .{common,externals}.cue
      command: sh
interpreters:
  ps1:
    args:
      - '-NoLogo'
      - '-NoProfile'
    command: pwsh
  sh:
    command: sh
