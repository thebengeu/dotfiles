hooks:
  apply:
    pre:
      args:
        - -c
        - >-
          cd $CHEZMOI_SOURCE_DIR;
          parallel cue export --force --inject-vars --outfile .chezmoi{}.yaml .chezmoi{}.cue
          ::: data external
      command: sh
interpreters:
  ps1:
    args:
      - '-NoLogo'
      - '-NoProfile'
    command: powershell
  sh:
    command: sh
