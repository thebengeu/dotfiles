  navigate = true
  theme = Catppuccin-mocha
[diff]
  colorMoved = default
[init]
  templateDir = ~/.git_template
[interactive]
  diffFilter = delta --color-only
[merge]
  conflictstyle = diff3
[pull]
  rebase = true
[rebase]
  autoStash = true
